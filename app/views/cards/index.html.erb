
    <div class="container">
      <p style="font-size: 22px;">
        список карт
      </p>
      <div class="row">
      	  <% @cards.each do |card| %>
			     <div class="col-md-4">
				      <p class="text-center">
				      <%= card.original_text %>
				      </p>
				 </div>
			     <div class="col-md-4">
				      <p class="text-center">
				      <%= card.translated_text %>
				      </p>
			     </div> 
			     <div class="col-md-4">
				      <p class="text-center">
				      <%= card.review_date.strftime("%d/%m/%Y")  %>
				      </p>
			     </div> 


			  <% end %>
	  </div>
    </div>

  
