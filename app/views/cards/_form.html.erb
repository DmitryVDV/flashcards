<%= simple_form_for @card do |f| %>
<% if @card.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @card.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <%= f.input :original_text, wrapper_html: { class: 'col-sm-4' }  %>
  <%= f.input :translated_text, wrapper_html: { class: 'col-sm-4' }  %>
  <%= f.button :submit %>
<% end %>

